<odoo>
  <!-- Acción Tree/Form -->
  <record id="action_group_activity_bundle" model="ir.actions.act_window">
    <field name="name">Plantillas de actividades</field>
    <field name="res_model">group.activity.bundle</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
  </record>

  <!-- Tree de bundle -->
  <record id="view_group_activity_bundle_tree" model="ir.ui.view">
    <field name="name">group.activity.bundle.tree</field>
    <field name="model">group.activity.bundle</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="line_ids" widget="one2many_list" readonly="1"/>
      </tree>
    </field>
  </record>

  <!-- Form de bundle -->
  <record id="view_group_activity_bundle_form" model="ir.ui.view">
    <field name="name">group.activity.bundle.form</field>
    <field name="model">group.activity.bundle</field>
    <field name="arch" type="xml">
      <form string="Plantilla de actividades">
        <sheet>
          <group>
            <field name="name"/>
          </group>
          <notebook>
            <page string="Actividades">
              <field name="line_ids">
                <tree editable="bottom">
                  <field name="template_id"/>
                  <field name="price_per_seat_override"/>
                  <field name="day_number"/>
                  <field name="start_time" widget="float_time"/>
                  <field name="end_time" widget="float_time"/>
                </tree>
                <form>
                  <group>
                    <field name="template_id"/>
                    <field name="price_per_seat_override"/>
                  </group>
                  <group string="Autoprogramación (opcional)">
                    <field name="day_number"/>
                    <field name="start_time" widget="float_time"/>
                    <field name="end_time" widget="float_time"/>
                  </group>
                </form>
              </field>
            </page>
                        <!-- NUEVA pestaña -->
            <page string="Precios por grupo">
              <field name="tier_ids">
                <tree editable="bottom">
                  <field name="min_people"/>
                  <field name="max_people"/>
                  <field name="price_per_person"/>
                </tree>
                <form>
                  <group>
                    <field name="min_people"/>
                    <field name="max_people"/>
                    <field name="price_per_person"/>
                  </group>
                </form>
              </field>
            </page>

          </notebook>
        </sheet>
      </form>
    </field>
  </record>
  
    <!-- Menú: ajusta parent a tu menú raíz del módulo -->
  <menuitem id="menu_group_activity_bundle_root"
            name="Plantillas de actividades"
            parent="menu_group_management_root"
            action="action_group_activity_bundle"
            sequence="40"/>
</odoo>

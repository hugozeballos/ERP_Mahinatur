<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- 1) Vista calendario para tu modelo de reservas externas -->
  <record id="view_tour_external_calendar" model="ir.ui.view">
    <field name="name">tour.minimal.calendar.external</field>
    <field name="model">tour.minimal</field>
    <field name="arch" type="xml">
      <calendar string="Externa" date_start="date_start">
        <field name="name"/>
      </calendar>
    </field>
  </record>

  <!-- 3) Acción que abre el calendario (y lista) en la ventana principal -->
  <record id="action_tour_external_calendar" model="ir.actions.act_window">
    <field name="name">Actividades Externas</field>
    <field name="res_model">tour.minimal</field>
    <field name="view_mode">calendar,tree,form</field>
    <field name="domain">[('service_kind', '=', 'external')]</field>
    <field name="context">{}</field>
    <field name="view_id" ref="view_tour_external_calendar"/>
  </record>

    <!-- 4) Menú dentro de 'Gestión de Tours' -->
  <menuitem id="menu_tour_external_calendar"
            name="Actividades Externas"
            parent="menu_tour_minimal_root"
            action="action_tour_external_calendar"
            sequence="35"/>
</odoo>

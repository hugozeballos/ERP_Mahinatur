<odoo>
  <record id="view_participant_move_wizard_form" model="ir.ui.view">
    <field name="name">participant.move.wizard.form</field>
    <field name="model">tour.participant.move.wizard</field>
    <field name="arch" type="xml">
      <form string="Mover Participante a Otro Tour">
        <group>
          <field name="participant_id"/>
          <field name="current_tour_id"/>
          <field name="new_tour_id"/>
          <field name="note"/>
        </group>
        <footer>
          <button string="Mover" type="object" name="action_move" class="btn-primary"/>
          <button string="Cancelar" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>

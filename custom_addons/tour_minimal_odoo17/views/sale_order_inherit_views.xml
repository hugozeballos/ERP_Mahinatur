<odoo>
  <record id="view_order_form_expand_packages" model="ir.ui.view">
    <field name="name">sale.order.form.expand.packages</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_expand_packages"
                type="object"
                string="Desglosar paquete"
                class="btn-secondary"
                invisible="state != 'draft'"/>
      </xpath>
    </field>
  </record>
  <record id="view_order_form_inherit_agency_code" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.agency.code</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="external_agency_code"/>
            <field name="tour_leader_count"/>
        </xpath>
    </field>
  </record>
  <record id="view_order_form_inherit_tour_fields" model="ir.ui.view">
      <field name="name">sale.order.form.inherit.tour.fields</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
          <xpath expr="//field[@name='partner_id']" position="after">
              <field name="check_in"/>
              <field name="check_out"/>
              <field name="flight_in_id"
                    options="{'no_create': False, 'no_create_edit': False}"/>
              <field name="flight_out_id"
                    options="{'no_create': False, 'no_create_edit': False}"/>
              <field name="hotel_id"
                    domain="[('is_hotel','=',True)]"
                    context="{'default_is_hotel': True}"
                    options="{'no_create': False, 'no_create_edit': False}"/>

          </xpath>
      </field>
  </record>
   <!-- Añadir service_date en el árbol y formulario del one2many order_line -->
  <record id="view_order_form_lines_service_date" model="ir.ui.view">
    <field name="name">sale.order.form.lines.service.date</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- 1) Columna en el árbol de líneas: insertar DESPUÉS de 'name' -->
      <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
        <field name="service_date"
               optional="show"
               attrs="{'invisible': ['|', ('is_package_component','=',False), ('component_service_kind','!=','sib')]}"/>
      </xpath>

      <!-- 2) Campo en el formulario de la línea: insertar DESPUÉS de 'product_id' -->
      <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
        <field name="service_date"
               attrs="{
                 'readonly': [('is_package_component','=',False)],
                 'required': [('is_package_component','=',True), ('component_service_kind','=','sib')]
               }"/>
      </xpath>
    </field>
  </record>
</odoo>
<odoo>
    <!-- Vista del wizard -->
    <record id="view_vehicle_availability_wizard_form" model="ir.ui.view">
        <field name="name">vehicle.availability.wizard.form</field>
        <field name="model">vehicle.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Buscar Disponibilidad de Autos">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_check_availability" type="object" class="btn-primary" string="Buscar"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button name="create_from_vehicle_action"
                        type="object"
                        string="Agregar a Orden de Venta"
                        class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vista de resultados del wizard -->
    <record id="view_vehicle_availability_results_form" model="ir.ui.view">
        <field name="name">vehicle.availability.wizard.results.form</field>
        <field name="model">vehicle.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Autos disponibles">
                <sheet>
                    <group>
                        <field name="start_date" readonly="1"/>
                        <field name="end_date" readonly="1"/>
                    </group>
                    <!-- Aquí se incrusta la lista de autos dentro del wizard -->
                    <field name="available_vehicle_ids">
                        <tree editable="bottom" string="Seleccionar vehículos disponibles">
                            <field name="license_plate"/>
                            <field name="model_id"/>
                            <field name="price_per_day"/>
                        </tree>
                    </field>
                </sheet>
                <footer>
                    <button name="create_from_vehicle_action"
                            type="object"
                            string="Agregar a Orden de Venta"
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="view_vehicle_availability_tree" model="ir.ui.view">
        <field name="name">fleet.vehicle.tree.availability</field>
        <field name="model">fleet.vehicle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="license_plate"/>
                <field name="model_id"/>
                <field name="rental_product_id"/>
            </tree>
        </field>
    </record>

    <record id="action_add_vehicle_to_sale_order" model="ir.actions.server">
        <field name="name">Agregar Vehículo a Orden</field>
        <field name="model_id" ref="fleet.model_fleet_vehicle"/>
        <field name="binding_model_id" ref="fleet.model_fleet_vehicle"/>
        <field name="binding_view_types">tree</field>
        <field name="state">code</field>
        <field name="code">
            action = env['sale.order.line'].create_from_vehicle_action(records)
        </field>
    </record>


    <!-- Acción del wizard -->
    <record id="action_vehicle_availability_wizard" model="ir.actions.act_window">
        <field name="name">Buscar Disponibilidad</field>
        <field name="res_model">vehicle.availability.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
